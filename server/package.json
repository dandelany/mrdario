{
  "name": "mrdario-server",
  "description": "Server for Mr. Dario - a Dr. Mario clone in ES6",
  "author": "Dan Delany <dan.delany@gmail.com>",
  "version": "0.2.0",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.js",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "start": "npm run build:live",
    "start:docker": "node dockerwait.js && node ${SOCKETCLUSTER_MASTER_CONTROLLER:-server.js}",
    "release": "npm run format && npm run build"
  },
  "dependencies": {
    "@ircam/sync": "^2.0.0",
    "connect": "3.6.6",
    "date-fns": "^1.30.1",
    "express": "4.16.4",
    "lodash": "4.17.11",
    "minimist": "^1.2.0",
    "morgan": "^1.9.1",
    "mrdario-core": "file:../core",
    "random-word-by-length": "^0.1.0",
    "redis": "^2.8.0",
    "sc-errors": "^2.0.0",
    "sc-framework-health-check": "^2.0.0",
    "sc-hot-reboot": "^1.0.0",
    "scc-broker-client": "^6.1.0",
    "serve-static": "1.13.2",
    "socketcluster": "^14.3.3",
    "socketcluster-client": "^14.2.1",
    "tweetnacl": "^1.0.1",
    "tweetnacl-util": "^0.15.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.121",
    "@types/node": "^11.9.4",
    "@types/redis": "^2.8.10",
    "@types/socketcluster-server": "^14.2.3",
    "@types/uuid": "^3.4.4",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  }
}
