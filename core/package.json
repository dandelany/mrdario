{
  "name": "mrdario-core",
  "version": "2.0.0",
  "description": "Core game code for Mr. Dario",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jest.config.js --coverage",
    "test-watch": "jest --config jest.config.js --watch",
    "clean": "rimraf lib/",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json --fix",
    "watch-changed": "yarn run build && echo 'OK'",
    "watch": "onchange -i 'src/**/*.ts' 'src/**/*.js' -- yarn run watch-changed",
    "release": "yarn run lint && yarn run format && yarn run test && yarn run clean && yarn run build"
  },
  "author": "Dan Delany <dan.delany@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/hammerjs": "^2.0.36",
    "@types/invariant": "^2.2.29",
    "@types/jest": "^24.0.6",
    "@types/lodash": "^4.14.121",
    "@types/mousetrap": "^1.6.1",
    "@types/seedrandom": "^2.4.27",
    "@types/socketcluster": "^14.0.2",
    "@types/socketcluster-client": "^13.0.2",
    "@types/socketcluster-server": "^14.2.3",
    "jest": "^27.2.5",
    "onchange": "~6.1.0",
    "prettier": "git://github.com/prettier/prettier.git#ae1d9afb8843ea033e62e029c06bcaaac43416cd",
    "rimraf": "^3.0.0",
    "socketcluster-client": "^14.2.1",
    "ts-jest": "^26.5.6",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.9.8"
  },
  "dependencies": {
    "@ircam/sync": "^2.0.1",
    "driftless": "^2.0.3",
    "events": "^3.0.0",
    "fp-ts": "~2.1.1",
    "gamepad-plus": "^1.0.14",
    "hammerjs": "^2.0.8",
    "immer": "~5.0.0",
    "io-ts": "~2.0.1",
    "lodash": "^4.17.11",
    "mousetrap": "^1.6.2",
    "seedrandom": "~3.0.5",
    "socketcluster": "^14.3.3",
    "socketcluster-server": "^14.4.0",
    "ts-invariant": "^0.4.4",
    "typestate": "^1.0.6"
  }
}
