{
  "name": "mrdario-core",
  "version": "2.0.0",
  "description": "Core game code for Mr. Dario",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "test-watch": "jest --config jestconfig.json --watch",
    "clean": "rimraf lib/",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json --fix",
    "watch-changed": "npm run build && echo 'OK'",
    "watch": "onchange -i 'src/**/*.ts' 'src/**/*.js' -- npm run watch-changed",
    "release": "npm run format && npm run lint && npm run test && npm run clean && npm run build"
  },
  "author": "Dan Delany <dan.delany@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/hammerjs": "^2.0.36",
    "@types/invariant": "^2.2.29",
    "@types/jest": "^24.0.6",
    "@types/lodash": "^4.14.121",
    "@types/mousetrap": "^1.6.1",
    "@types/seedrandom": "^2.4.27",
    "@types/socketcluster": "^14.0.2",
    "@types/socketcluster-client": "^13.0.2",
    "@types/socketcluster-server": "^14.2.3",
    "jest": "^24.1.0",
    "onchange": "^5.2.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "socketcluster-client": "^14.2.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@ircam/sync": "^2.0.1",
    "driftless": "^2.0.3",
    "events": "^3.0.0",
    "gamepad-plus": "^1.0.14",
    "hammerjs": "^2.0.8",
    "immer": "^2.0.0",
    "invariant": "^2.2.4",
    "io-ts": "^1.8.2",
    "lodash": "^4.17.11",
    "mousetrap": "^1.6.2",
    "seedrandom": "^2.4.4",
    "socketcluster": "^14.3.3",
    "socketcluster-server": "^14.4.0",
    "typestate": "^1.0.6",
    "ws": "^6.1.4"
  }
}
