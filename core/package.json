{
  "name": "mrdario-core",
  "version": "2.0.0",
  "description": "Core game code for Mr. Dario",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "clean": "rimraf lib/",
    "build": "npm run clean && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json --fix",
    "watch-changed": "npm run build && echo 'OK'",
    "watch": "onchange -i 'src/**/*.ts' 'src/**/*.js' -- npm run watch-changed"
  },
  "author": "Dan Delany <dan.delany@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/events": "^1.2.0",
    "@types/hammerjs": "^2.0.36",
    "@types/invariant": "^2.2.29",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.120",
    "@types/mousetrap": "^1.6.1",
    "jest": "^23.6.0",
    "onchange": "^5.2.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "events": "^3.0.0",
    "gamepad-plus": "^1.0.14",
    "hammerjs": "^2.0.8",
    "immer": "^1.10.5",
    "invariant": "^2.2.4",
    "lodash": "^4.17.11",
    "mousetrap": "^1.6.2",
    "typestate": "^1.0.6"
  }
}
